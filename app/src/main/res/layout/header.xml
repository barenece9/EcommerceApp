<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/primary"
    android:elevation="6dp"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/header_back"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:gravity="center_vertical"
        android:tint="#ffffff"
        android:background="@null"
        android:src="@drawable/ic_arrow_back_black_24dp"/>

   <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="ShopNOW"
        android:textSize="18sp"
        android:paddingTop="2dp"
        android:textStyle="bold"
       android:textColor="@color/icons"
        android:id="@+id/header_title"
       android:layout_centerVertical="true"
       android:layout_marginLeft="15dp"
       android:layout_toEndOf="@+id/header_back" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:textColor="@color/icons"
        android:id="@+id/imageView"
        android:visibility="gone"
        android:src="@drawable/logo_small"/>


    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/cart_64"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:id="@+id/header_cart"
        android:layout_toStartOf="@+id/header_wishlist"
        android:visibility="gone" />

    <ImageButton
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:id="@+id/header_wishlist"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="0dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/like_64"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_cart_count"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:textColor="@color/primary"
        android:text="3"
        android:textSize="9sp"
        android:gravity="center"
        android:background="@drawable/circle_bg"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@+id/header_wishlist"
        android:layout_alignParentTop="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_wish_count"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:textColor="@color/primary"
        android:text="1"
        android:textSize="9sp"
        android:gravity="center"
        android:background="@drawable/circle_bg"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15.5dp"
        android:layout_marginTop="7dp"
        android:layout_alignParentTop="true"
        android:visibility="gone"/>

</RelativeLayout>
